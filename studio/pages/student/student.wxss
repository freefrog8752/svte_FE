.main {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: auto;
}

.img {
    width: 120rpx;
    height: 90rpx;
    margin-left: 20rpx;
}

.text {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-right: 20rpx;
    margin: 20rpx;
}

.title {
    font-size: 20px;
    color: #000;
}

.subtitle {
    font-size: 18px;
    color: #999;
}
.view-request-fail{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.text-request-fail{
    font-size: 18px;
    color:rgb(85, 85, 85)
}
.project {
  width: 650rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #818181;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
  position: relative;
  /* border-bottom: 2rpx dashed #efeff1; */

}

.headimage {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 0rpx;
  margin-top: 15rpx;
  /* border:1rpx solid #ffd92e; */
}

.projecttext {
  position: absolute;
  top: 15rpx;
  left: 180rpx;
  z-index: 0;
}

.biaoti {
  font-size: 30rpx;
  color: #fff;
  display: block;
}

.jianjie {
  font-size: 25rpx;
  color: #fff;
  display: block;
  margin-right: 110rpx;
  padding-top: -5rpx;
  line-height: 16px;
}

.field {
  font-size: 25rpx;
  color: #ffd92e;
  display: block;
  margin-top: 35rpx;
  position: absolute;
  top: 75rpx;
  left: 0rpx;
  z-index: 1;
}

 .openpush {
  width: 0rpx;
  height: 0rpx;
  border-left: 35rpx solid #ffd92e;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-top: 20rpx solid transparent;
  position: absolute;
  top: 71rpx;
  right: 0rpx;
  z-index: 0;
} 
.back {
  font-size: 30rpx;
  color: #ffd92e;
  display: block;
  text-align: center;
  line-height: 70rpx;
  width: 150rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0);
  border: 3rpx solid #ffd92e;
  border-radius: 25rpx;
  margin-right: 30rpx;
  /* position: absolute; */
  /* left: 50%; */
  /* margin-left: -65rpx; */
  /* bottom: 70rpx; */
}
.btn-area{

  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}