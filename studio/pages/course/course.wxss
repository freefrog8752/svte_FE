 /* pages/search/search/search.wxss */
page{
  background-color: #000;
}
view {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border: none;
}
.yellow{
  color:#ffd92e;
}
.seltxt{
  color:#ffd92e!important;
}
.search {
  min-height: 85vh;
  background-color: #000;
  padding-bottom: 15vh;
  position: relative;
}

.clear-float:after {
  content: "";
  display: block;
  clear: both;
}

.search-bar {
  padding: 22rpx 30rpx;
  background-color: #fff;
}

.search-input-wrap {
  width: 690rpx;
  height: 60rpx;
  background-color: #ECEFF1;
  position: relative;
  border-radius: 10rpx;
}

.input-wrap {
  position: absolute;
  top: 50%;
  left: 70rpx;
  transform: translate(0, -50%);
}

.search-input {
  position: absolute;
  top: 50%;
  left: 0;
  width: 400rpx;
  height: 40rpx;
  transform: translate(0, -50%);
  color: #37474f;
  font-size: 28rpx;
  letter-spacing: 0;
}

.icon-search {
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translate(0, -50%);
  width: 30rpx;
  height: 30rpx;
}

.icon-search image {
  width: 100%;
  height: 100%;
}

.icon-close {
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translate(0, -50%);
  width: 30rpx;
  height: 30rpx;
  padding: 14rpx 14rpx 14rpx 24rpx;
}

.icon-close image {
  width: 100%;
  height: 100%;
}

.btn-cancel {
  position: absolute;
  top: 50%;
  right: -80rpx;
  transform: translate(0, -50%);
  font-size: 28rpx;
  color: #37474f;
  letter-spacing: 0;
}

.search-input-wrap-focus {
  width: 582.6rpx;
}

