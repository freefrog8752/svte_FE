page{
  background-color: #000;
}
.contanier{
  background-color: #000;
  padding-top: 1px;
}
.block1,.block2,.block3{
  padding: 10px;
  /* border-radius: 5px; */
  box-shadow: 1px 1px 5px rgba(126,126,126,.2);
  margin-top: 20px;
  background-color: #fff;
}
.block1{
  margin-top: -1px;
}
.block1,.block2{
  display: flex;
  margin-bottom: 15px;
}
.block3{
  margin-bottom: 15px;
}
.block1>view:nth-of-type(1){
  flex: 1;
  text-align: center;
}
.block1>view:nth-of-type(2){
  flex: 2;
}
.block1>view:nth-of-type(2)>view{
  line-height: 27px;
  font-size: 14px;
  padding-left: 15px;
}
.block1>view:nth-of-type(3){
  flex: 2;
  text-align: center;
}
.block1>view:nth-of-type(1) image{
  max-width: 40px;
  max-height: 40px; 
}
.block1>view:nth-of-type(3) image{
  max-width: 80px;
  max-height: 80px;
}
.block2{
  padding: 20px;
}
.block2>view{
  flex: 1;
  text-align: center;
}
.block2 navigator{
  width: 50px;
  height: 50px;
  display: inline-block;
}
.block3{
  padding: 0 20px;
}
.block3>view{
  line-height: 50px;
  border-bottom: 1px solid rgba(126,126,126,.2);
  font-size: 12px;
}
