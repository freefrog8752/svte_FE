/* pages/ranking/ranking.wxss */
page{
  background-color: #000;
}
.list>view{
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 15px 15px 0 15px;
  border-bottom: 1px solid rgba(126, 126, 126,.2);
  font-size: 14px;
  color: #fff;
}
.tab-title>view{
  font-weight: bold;
  font-size: 16px;
  color:#fff;
  padding-left: 20px;
}
.list>view image{
  max-width: 50px;
  max-height: 50px;
  border-radius: 50px;
}
.list>view>view{
  line-height: 50px;
}
.user{
  display: flex;
  line-height: 20px;
  color: #fff;
}
.user>view:nth-of-type(2){
  margin-left: 10px;
  line-height: 50px;
}
