/**index.wxss**/
page{
  background-color: #000;
}
.banner,.my-course,.navi-bar,.notification,.message-board{
  width:96%;
  margin-bottom: 20px;
  background-color: #fff;
  border-radius: 6px;
  margin-top:10px;
  margin-left: 2%;
  margin-right:2%; 
}
.banner{
  background-color: transparent;
}
.swiper-item{
  text-align: center;
}
.slide-image{
  width: 100%;
  height: 150px;
}
.my-course{
  
}
.my-course-title navigator{
  margin-left: 15px;
}
.empty-course-box{
  /* display: none; */
}
.empty-course-box navigator{
  line-height: 100px;
  font-size: 35px;
  color: #d8d2d2;
}
.course-info{
  font-size: 16px;
  color: #888383;
}
.my-course-title,.notification-title,.message-board-title{
  flex-direction: row;
  display: flex;
  line-height: 60px;
  font-weight: bold;
  padding-left: 10px;
  justify-content: space-between;
padding-right: 10px;

}
.my-course-panel{
  text-align: center;
  box-shadow:2px 2px 5px #d8d2d2;
  height: 190px;
}
.course-item{
  display: flex;
  justify-content: space-between;
  padding: 10px;
}
.course-item>text{
  font-size: 12px;
}
.navi-bar{
  display: flex;
  justify-content: space-between;
  padding: 20px 0 10px 0;
}
.navi-bar-item{
  font-size: 14px;
  flex: 1;
  text-align: center;
  margin: 0px 2px;
}
.navi-bar-item-a{
  height: 60px;
}
.navi-bar-item-b{
  height: 30px;
}

.navi-bar>view:nth-of-type(1)>navigator{
  /* background-image: linear-gradient(to right, #ff9569 0%, #e92758 100%); */
}
.navi-bar>view:nth-of-type(2)>navigator{
  /* background-image: linear-gradient(to right, #29bdd9 0%, #276ace 100%); */
}
.navi-bar>view:nth-of-type(3)>navigator{
  /* background-image: linear-gradient(to right, #cac531 0%, #f3f9a7 100%); */
}
.navi-bar>view:nth-of-type(4)>navigator{
  /* background-image: linear-gradient(to right, #2193b0 0%, #6dd5ed 100%); */
}
.navi-bar-item text{
  line-height: 30px;
}
.notification-item,.message-item{
  padding: 10px;
  margin: 15px 0;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  font-size: 12px;
}
.notification-item:nth-of-type(1),.message-item:nth-of-type(1){
  border-left: 5px solid #ffd92e;
  color: #ffd92e;
}
.message-board-panel{
  margin: 0;
}
.message-board-panel>view:nth-of-type(1),.notification-panel>view:nth-of-type(1){
  margin-top:0;
}
.message-board-panel>view:nth-last-child(1),.notification-panel>view:nth-last-child(1){
  margin-bottom:0;
  padding-bottom:20px;
  border-bottom: none;
}
.notification-item view,.message-item view{
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.message-item{
  padding: 6px;
}
