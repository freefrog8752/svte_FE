/* pages/user/user.wxss */

/*虚化背景  */

page {
  min-height: 100vh;
  position: relative;
  /* background-color: #ffd92e; */
}

.bg {
  width: 750rpx;
  height: 100%;
  position: absolute;
}

/*头部盒模型  */

.head {
  display: flex;
  position: relative;
  padding:100rpx 50rpx;
  margin: 0 auto;
  background-color:#ffd92e;
}
.head-name{
  line-height: 150rpx;
  padding-left:20rpx; 
  color:#fff;
}
.second-section{
  position: relative;
  display: flex;
align-content: center;
align-items: center;
background-color: #fff;
margin-left: 30px;
margin-right: 30px;
top: -40rpx;
border-radius: 20rpx;

}
.second-section .second-section-child{
  flex:1;
  text-align: center;
  /* border: 1rpx solid #ffd92e; */
  height: 75rpx;
  line-height: 75rpx
}
/*头部照片  */

.headphoto {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* box-shadow: 0px 5px 2px #888888; */
}

/*相机背景  */

.photobg {
  width: 50rpx;
  height: 50rpx;
  background-color: #ffd92e;
  position: absolute;
  border-radius: 50%;
  top: 142rpx;
  right: -2px;
}

/*基本信息  */

.basic {
  /* padding-left: 20px; */
  display: block;
  /* padding-right: 40rpx; */
  /* width: 100%; */
  margin-top: 20rpx;
}
.basic-row{
  display: flex;
  align-content: center;
  align-items: center;
  background-color: #fff;
}
.basic-row-child{
  border-collapse: collapse;
  /* border: 1px solid #ffd92e; */
  line-height: 150rpx;
  height: 150rpx;
  text-align: center;
  flex: 1;
}